
@model ReservasiApp.Models.tblT_Reservasi

<h2>Delete Employee</h2>
@using (Html.BeginForm("delete", "reservation", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.Reservasi_PK)

    <div class="form-group">
        <label>Ruangan</label>
        <p>@Model.Ruangan_FK</p>
    </div>

    <div class="form-group">
        <label>Subject</label>
        <p>@Model.SubjectReservasi</p>
    </div>

    <div class="form-group">
        <label>Tanggal</label>
        <p>@Model.TanggalReservasi</p>
    </div>

    <div class="form-group">
        <label>Jam Mulai</label>
        <p>@Model.JamMulai</p>
    </div>

    <div class="form-group">
        <label>Jam Selesai</label>
        <p>@Model.JamSelesai</p>
    </div>

    <div>
        <input type="submit" value="Delete" />
    </div>
}

